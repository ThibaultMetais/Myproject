<h2><%= @company.name %> products</h2><br>

<ul style="list-style-type: none;">
  <% @products.each do |product| %>
    <% if @company.id == product.company_id %>
      <li><%= link_to product.name, product %></li><br><br>
    <% end %>
  <% end %>
</ul><br>

<%= link_to "Back", "/", class: 'button'  %>
